# Maintainer: graysky <graysky AT archlinux DOT us>

pkgname=flac2all
pkgver=1.2.6
pkgrel=2
pkgdesc="Multi-threaded audio converter of FLAC to either Ogg Vorbis or MP3 retaining all tags and metadata."
arch=('any')
url="http://code.google.com/p/flac2all"
license=('GPL2')
depends=('flac' 'lame' 'vorbis-tools' 'python2')
source=(http://$pkgname.googlecode.com/files/convertaudio_v$pkgver.py)
sha256sums=('4f0ce94bcfa1fc84973c6ae2084db731c3537bbb53098239ec0d411ebecb8f00')

package() {
  cd "$srcdir"
  sed -i -e s'/python/python2/1' -i -e s'/convertaudio.py/flac2all/' convertaudio_v$pkgver.py
  install -Dm755 convertaudio_v$pkgver.py "$pkgdir/usr/bin/flac2all"
}

# vim:set ts=2 sw=2 et:
